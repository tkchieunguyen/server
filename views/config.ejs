    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        //socket.emit('C-ScanI2C', '{"HouseID":2,"cmd":"SCAN I2C","lenght":2,"address1":46,"address2":47}')
        socket.on("GET_I2C_DEVICE", (data1) => {
            let data = JSON.parse(data1)
            if (data.HouseID == 1) {
                for (let i = 1; i <= data.lenght; i++) {
                    const addressKey = `I2C_address_${i}`;
                    const addressValue = parseInt(data[addressKey]);
                    console.log(`${addressKey}: ${addressValue}`);
                    const form = document.createElement("form");
                    form.addEventListener("submit", (event) => sendData2(event, addressValue));

                    const label = document.createElement("label");
                    label.setAttribute("for", `i2cInput${addressValue}`);
                    label.textContent = `Nhập giá trị Read I2C cho địa chỉ ${addressValue}:`;

                    const input = document.createElement("input");
                    input.setAttribute("type", "number");
                    input.setAttribute("id", `i2cInput${addressValue}`);
                    input.setAttribute("name", "i2cInput");

                    const button = document.createElement("button");
                    button.setAttribute("type", "submit");
                    button.textContent = "Gửi";

                    form.appendChild(label);
                    form.appendChild(input);
                    form.appendChild(button);

                    // Thêm form vào HTML
                    const container = document.getElementById("formContainer");
                    container.appendChild(form);
                }
            }
            else if (data.HouseID == 2) {
                for (let i = 1; i <= data.lenght; i++) {
                    const addressKey = `I2C_address_${i}`;
                    const addressValue = parseInt(data[addressKey]);
                    console.log(`${addressKey}: ${addressValue}`);
                    const form = document.createElement("form");
                    form.addEventListener("submit", (event) => sendData3(event, addressValue));

                    const label = document.createElement("label");
                    label.setAttribute("for", `i2cInput${addressValue}`);
                    label.textContent = `Nhập giá trị Read I2C cho địa chỉ ${addressValue}:`;

                    const input = document.createElement("input");
                    input.setAttribute("type", "number");
                    input.setAttribute("id", `i2cInput${addressValue}`);
                    input.setAttribute("name", "i2cInput");

                    const button = document.createElement("button");
                    button.setAttribute("type", "submit");
                    button.textContent = "Gửi";

                    form.appendChild(label);
                    form.appendChild(input);
                    form.appendChild(button);

                    // Thêm form vào HTML
                    const container = document.getElementById("formContainer2");
                    container.appendChild(form);
                }
            }
        })
        function set_time_ADC_1(event) {
            event.preventDefault();
            let adcInput = parseInt(document.getElementById("adcInput").value);
            let hexString = adcInput.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("config", '{"server":{"houseID":1,"request":"WriteCMD","lenght":4,"cmdAuto":1,"cmdID":20,"time1":"' + parseInt(hexBytes[0], 16) + '","time2":"' + parseInt(hexBytes[1], 16) + '"}}');
            document.getElementById("adcInput").value = "";
        }
        function set_time_ADC_2(event) {
            event.preventDefault();
            let adcInput = parseInt(document.getElementById("adcInput2").value);
            let hexString = adcInput.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("config", '{"server":{"houseID":2,"request":"WriteCMD","lenght":4,"cmdAuto":1,"cmdID":30,"time1":"' + parseInt(hexBytes[0], 16) + '","time2":"' + parseInt(hexBytes[1], 16) + '"}}');
            document.getElementById("adcInput2").value = "";
        }
        function set_time_RS485_1_NPK(event) {
            event.preventDefault();
            let npk = parseInt(document.getElementById("npkInput1").value);
            let hexString = npk.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("configRS485", '{"server":{"houseID":1,"request":"WriteCMD","lenght":10,"cmdAuto":8,"RS485":1,"Funtion":3,"msbAddress":0,"lsbAddress":30,"msbNob":0,"lsbNob":3,"cmdID":31,"time1":"' + parseInt(hexBytes[0], 16) + '","time2":"' + parseInt(hexBytes[1], 16) + '"}}');
            document.getElementById("npkInput1").value = "";
        }
        function set_time_RS485_1_pH(event) {
            event.preventDefault();
            let ph = parseInt(document.getElementById("phInput1").value);
            let hexString = ph.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("configRS485", '{"server":{"houseID":1,"request":"WriteCMD","lenght":10,"cmdAuto":8,"RS485":1,"Funtion":3,"msbAddress":0,"lsbAddress":6,"msbNob":0,"lsbNob":1,"cmdID":32,"time1":"' + parseInt(hexBytes[0], 16) + '","time2":"' + parseInt(hexBytes[1], 16) + '"}}');
            document.getElementById("phInput1").value = "";
        }
        function set_time_RS485_1_Moisture(event) {
            event.preventDefault();
            let moisture = parseInt(document.getElementById("moistureInput").value);
            let hexString = moisture.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("configRS485", '{"server":{"houseID":1,"request":"WriteCMD","lenght":10,"cmdAuto":8,"RS485":1,"Funtion":3,"msbAddress":0,"lsbAddress":12,"msbNob":0,"lsbNob":2,"cmdID":33,"time1":"' + parseInt(hexBytes[0], 16) + '","time2":"' + parseInt(hexBytes[1], 16) + '"}}');
            document.getElementById("moistureInput").value = "";
        }
        function set_time_RS485_2(event) {
            event.preventDefault();
            let rs485Input = parseInt(document.getElementById("rs485Input2").value);
            let hexString = rs485Input.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("configRS485", '{"server":{"houseID":2,"request":"WriteCMD","lenght":4,"cmdAuto":8,"cmdID":22,"time1":"' + hexBytes[0] + ',"time2":' + hexBytes[1] + '}}');
            document.getElementById("rs485Input2").value = "";
        }
        function sendData2(event, addressValue) {
            var numberOfByte;
            event.preventDefault();
            let i2cInput = parseInt(document.getElementById(`i2cInput${addressValue}`).value);
            if (addressValue == 44) {
                numberOfByte = 6;
            }
            if (addressValue == 23) {
                numberOfByte = 4;
            }
            let hexString = i2cInput.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("configI2C", '{"server":{"houseID":1,"request":"WriteCMD","lenght":5,"cmdAuto":5,"i2ca":"' + addressValue + '","cmdID":"' + addressValue + '","time1":' + parseInt(hexBytes[0], 16) + ',"time2":' + parseInt(hexBytes[1], 16) + '}}');
            document.getElementById(`i2cInput${addressValue}`).value = "";
        }
        function sendData3(event, addressValue) {
            let numberOfByte;
            event.preventDefault();
            let i2cInput = parseInt(document.getElementById(`i2cInput${addressValue}`).value);
            if (addressValue == 44) {
                numberOfByte = 6;
            }
            if (addressValue == 23) {
                numberOfByte = 4;
            }
            let hexString = i2cInput.toString(16).padStart(4, '0');
            let hexBytes = [hexString.substr(0, 2), hexString.substr(2, 2)];
            socket.emit("configI2C", '{"server":{"houseID":2,"request":"WriteCMD","cmdAuto":5,"lenght":5,"address I2C":"' + addressValue + '","cmdID":"' + addressValue + '","time1":' + parseInt(hexBytes[0], 16) + ',"time2":' + parseInt(hexBytes[1], 16) + '}}');
            document.getElementById(`i2cInput${addressValue}`).value = "";
        }
        var scani2c1 = document.querySelector('.scani2c1');
        scani2c1.addEventListener('click', () => {
            socket.emit('scan_i2c', '{"server":{"houseID":1,"request":"ScanI2C","lenght":0}}')
        })
        var scani2c2 = document.querySelector('.scani2c2');
        scani2c2.addEventListener('click', () => {
            socket.emit('scan_i2c', '{"server":{"houseID":2,"request":"ScanI2C","lenght":0}}')
        })
    </script>
